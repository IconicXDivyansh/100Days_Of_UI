
---
import Main from "../layouts/Main.astro";
---

<Main title="Error Page">
<div class="min-h-screen flex flex-col items-center justify-center">
    <div class="h-12 w-12 flex items-center overflow-hidden rounded-full bg-foreground border border-border p-2">
        <a class="group" href="/">
            <img class="translate-y-4 group-hover:-translate-y-6 transition duration-200" src="/house.svg" alt="home icon">
            <img class="translate-y-7 group-hover:-translate-y-4 transition duration-200" src="/house.svg" alt="home icon">
        </a>
    </div>
    <div class="text-center">
        <h1 class="text-7xl">404</h1>
        <h2 class="text-2xl">Page Not Found</h2>
     </div>
    <img class="w-100 h-100" src="/Page_not_found.png" alt="404 error image"/>
</div>
</Main>